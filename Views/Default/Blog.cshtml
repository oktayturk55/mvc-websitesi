@using vs1.Models.Siniflar
@model List<blog>
@{
    ViewBag.Title = "Blog";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<!DOCTYPE HTML>
<html>
<body>
    <br /><br /><br />
    <div class="container">
        <div class="row">
            @foreach (var x in Model)
            {
                <div class="col-md-4 choose-grid">

                    <img src="@x.blogimage" alt="" width="340" height="250" />
                    <h5>@x.baslik</h5>
                    <p>@x.kisaaciklama</p>
                    <div class="choose-button">
                        <a href="/Default/Blogdetail/@x.ID">More</a><br /><br /><br />
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
